# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# ssh
export SSH_KEY_PATH="~/.ssh/dsa_id"

### Linuxbrew
[ -d "$HOME/.linuxbrew" ] && PATH="$HOME/.linuxbrew/bin:$PATH"
[ -d "$HOME/.linuxbrew" ] && PATH="$HOME/.linuxbrew/sbin:$PATH"
export XDG_DATA_DIRS="$HOME/.linuxbrew/share:$XDG_DATA_DIRS"

### N ( node.js manager )
export N_PREFIX="$HOME/.linuxbrew/include"
[ -d "$HOME/.linuxbrew/include/bin" ] && PATH="$HOME/.linuxbrew/include/bin:$PATH"

### Path
[ -d "$HOME/.local/bin" ] && PATH="$PATH:$HOME/.local/bin"
[ -d "$HOME/bin" ] && PATH="$PATH:$HOME/bin"

# Projects
[ -d "$HOME/projects/dotfiles/bin" ] && PATH="$PATH:$HOME/projects/dotfiles/bin"
[ -d "$HOME/projects/docker-cloud" ] && PATH="$PATH:$HOME/projects/docker-cloud"
[ -d "$HOME/projects/scripts" ] && PATH="$PATH:$HOME/projects/scripts"

# Custom apps
for dir in $HOME/apps/*/bin ; do 
  PATH="$PATH:$dir"
done

[ -d "$HOME/apps/hyperterm" ] && PATH="$PATH:$HOME/apps/hyperterm"

if [ -n "$DESKTOP_SESSION" ];then
  eval $(gnome-keyring-daemon --start)
  export SSH_AUTH_SOCK
fi

export PATH=$PATH
