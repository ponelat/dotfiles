[core]
  pager = cat
[user]
  name = Josh Ponelat
  email = josh@ponelat.com
[alias]
  re = reset
  rh = reset HEAD~
  ref = reflog
  rf= reflog -n 10
  co = checkout
  cb = checkout -b
  ct = checkout --theirs
  ci = commit --verbose
  ca = commit --all --verbose
  cm = commit -m
  amend = commit --amend --verbose
  amendd = commit --amend --verbose -C HEAD
  di = diff
  dc = diff --staged
  dcs= diff-index -u HEAD -S
  ds = diff --stat
  aa = add --all
  ap = add --all -p
  br = branch
  bc = branch --contains
  bm = branch --move
  ff = merge --ff-only
  lr = log --oneline --left-right
  right = log --oneline --right-only 
  left = log --oneline --left-only 
  ri = rebase -i
  ra = rebase --abort
  rc = rebase --continue
  rs = rebase --skip
  last = log --oneline -1
  l = "!. ~/.githelpers && pretty_git_log"
  cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
  wipe = "!git checkout . ; git clean -f"
[push]
  default = simple
